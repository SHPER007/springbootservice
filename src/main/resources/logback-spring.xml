<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <springProperty scope="context" name="appName" source="spring.application.name"/>

    <!-- 输出到控制台 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{TraceId}] [%thread] %-5level %logger{36} ${appName} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 滚动文件日志 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/${appName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 保留30天内的日志 -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date %level [%X{TraceId}] [%thread] %logger{36} [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 根 logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

    <!-- 可选：为特定包或者类设置不同的日志级别 -->
    <logger name="com.example.myproject.package" level="DEBUG"/>

    <!-- 可选：处理Spring Profile相关的条件配置 -->
    <springProfile name="dev">
        <!-- 在开发环境下，调整某个logger的日志级别 -->
        <logger name="org.hibernate.SQL" level="DEBUG"/>
    </springProfile>

    <!-- 可选：控制台输出更简洁的格式 -->
    <springProfile name="prod">
        <appender-ref ref="CONSOLE" />
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
        <logger name="org.springframework.web" level="WARN"/>
    </springProfile>

</configuration>